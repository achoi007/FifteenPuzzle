<Window x:Class="FifteenPuzzle.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input from User" Height="140" Width="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Width" Value="70" />
        </Style>
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button IsDefault="True" Name="btnOK" Click="btnOK_Click">OK</Button>
            <Button IsCancel="True">Cancel</Button>
        </StackPanel>
        
        <StackPanel Orientation="Vertical" Name="stkInputs">
            <TextBlock Name="txtPrompt" Height="50" TextWrapping="Wrap">TEST</TextBlock>
            <TextBox Name="txtInput"></TextBox>
        </StackPanel>
        
    </DockPanel>
</Window>
